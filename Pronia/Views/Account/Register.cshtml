@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserRegisterVM
<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-12 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">First Name</label>
                                    <input asp-for="Name" placeholder="First Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Last Name</label>
                                    <input asp-for="Surname" placeholder="Last Name" />
                                    <span asp-validation-for="Surname" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="UserName">User Name</label>
                                    <input asp-for="UserName" placeholder="UserName" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Email">Email Adress*</label>
                                    <input asp-for="Email" placeholder="example@gmail.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly">

                                </div>
                                <a asp-action="Login">Already have Account?</a>
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->
