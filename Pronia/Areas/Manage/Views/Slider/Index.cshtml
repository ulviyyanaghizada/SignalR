
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model ICollection<Slider>
<div class="container">
    <div class="card mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>PrimaryTitle</th>
                        <th>SecondaryTitle</th>
                        <th>Description</th>
                        <th>ImageUrl</th>
                        <th>Order</th>
                        <th colspan="2">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.PrimaryTitle</td>
                            <td>@item.SecondaryTitle</td>
                            <td>@item.Description</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.Order</td>
                            <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            <td><a class="btn btn-info" asp-area="Manage" asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


