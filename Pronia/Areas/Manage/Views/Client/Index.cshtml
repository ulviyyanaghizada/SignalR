
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model ICollection<Client>
<div class="container">
    <div class="card mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>FullName</th>
                        <th>Description</th>
                        <th>Role</th>
                        <th>Image</th>
                        <th colspan="2">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.Description</td>
                            <td>@item.Role</td>
                            <td><img width="40" src="@item.Image" /></td>
                            <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Client" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            <td><a class="btn btn-info" asp-area="Manage" asp-controller="Client" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


